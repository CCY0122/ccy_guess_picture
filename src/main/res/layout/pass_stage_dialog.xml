<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="380dp"
    android:id="@+id/pass_dialog"
    android:layout_height="230dp"
    android:background="@drawable/pass_stage"
    android:gravity="center">
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="230dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~回答正确~"
            android:textSize="30sp"
            android:layout_marginBottom="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金币 + "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/add_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                android:textColor="#ff5555ff"/>
        </LinearLayout>
        <Button
            android:id="@+id/pass_btn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/pass_btn"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</LinearLayout>